{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cogo.ai/schemas/uui/ui.schema.json",
  "title": "UUI JSON",
  "type": "object",
  "required": ["version", "tree"],
  "properties": {
    "version": { "type": "string" },
    "tree": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "kind"],
        "properties": {
          "id": { "type": "string" },
          "kind": { "type": "string" },
          "attrs": { "type": "object", "additionalProperties": true },
          "children": { "$ref": "#/properties/tree" }
        },
        "additionalProperties": true
      }
    },
    "meta": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": true
}


